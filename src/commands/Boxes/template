                    rank_amount: 1,
                    dropChanceRANK: 50
                },
                {
                    rank_amount: 5,
                    dropChanceRANK: 30
                },
                {
                    rank_amount: 10,
                    dropChanceRANK: 15
                },
                {
                    rank_amount: 20,
                    dropChanceRANK: 5
                },


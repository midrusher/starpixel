            let act_exp = [
                {
                    act_amount: 1,
                    dropChanceACT: 50
                },
                {
                    act_amount: 5,
                    dropChanceACT: 30
                },
                {
                    act_amount: 10,
                    dropChanceACT: 15
                },
                {
                    act_amount: 20,
                    dropChanceACT: 5
                },

            ]

            //–†–∞–Ω–¥–æ–º - –æ–ø—ã—Ç –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏
            let sum_act = 0;

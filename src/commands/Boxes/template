        const role = await interaction.guild.roles  //–ü–æ—Å—Ç–æ—è–Ω–Ω–∞—è –¥–ª—è role
            .fetch("876045350673186826") //ID –∫–æ—Ä–æ–±–∫–∏
            .catch(console.error);

